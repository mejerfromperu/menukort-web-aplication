<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Menukort</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/menukort.styles.css" asp-append-version="true" />    
    <link rel="icon" href="~/lib/favicon.ico" type="image/x-icon">






</head>
<body>

<style>
body {
  background-image: url("https://wallpaperaccess.com/full/462773.jpg");
  background-size: cover; 
  background-repeat: no-repeat; 
  background-position: center center; 
}


body {
  width: 100 %; 
  height: 100vh; 
}
</style>

<header>
   <style>
       .navbar {
           background-color: #ff6347; 
           padding: 15px 0; 
       }
   
       .navbar-brand,
       .navbar-nav .nav-link {
           color: #ffeb3b; 
           font-family: 'Pizza', cursive; 
           font-size: 20px;
           text-decoration: none;
           transition: color 0.3s ease;
       }
   
       .navbar-brand:hover,
       .navbar-nav .nav-link:hover {
           color: #fff; 
       }
   
       .navbar-toggler-icon {
           background-color: #ffeb3b; 
       }
   
       .navbar {
           background-color: #2c3e50; 
       }
   </style>
   
   
   
   <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
       <div class="container">
           <a class="navbar-brand" asp-area="" asp-page="/Index">Menukort</a>
           <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                   aria-expanded="false" aria-label="Toggle navigation">
               <span class="navbar-toggler-icon"></span>
           </button>
           <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
               <ul class="navbar-nav flex-grow-1">
                   <li class="nav-item">
                       <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                   </li>
                   <li class="nav-item">
                       <a class="nav-link" asp-area="" asp-page="Pizzaer/Index">Pizza-Menu</a>
                   </li>
                   <li class="nav-item">
                       <a class="nav-link" asp-area="" asp-page="Burgere/Index">Burger-Menu</a>
                   </li>
                   <li class="nav-item">
                       <a class="nav-link" asp-area="" asp-page="Pizzaer/Index">Drikkevare-Menu</a>
                   </li>
               </ul>
           </div>
       </div>
   </nav>

</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2023 - menukort - <a asp-area="" asp-page="/Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>