@page
@using menukort.model;
@model menukort.Pages.Drikkevarerer.DrikkevarerModel
@{
    ViewData["Title"] = "Drikkevarerer";
}
<style>
    .jumbotron {
        font-family: 'Drikkevarer', cursive;
        font-size: 48px;
        text-align: center;
        color: #ff6347;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    .btn-success {
        background-color: #ff6347;
        border-color: #ff6347;
        font-family: 'Drikkevarer', cursive;
    }

    .table th, .table td {
        font-family: 'Drikkevarer', cursive;
        color: #ff6347;
    }
</style>

<h1 class="jumbotron">Drikkevarer Menu</h1>
<form method="post">

    Vil du oprette en ny drikkevarer tryk på <input type="submit" value="Opret Drikkevarer" class="btn  btn-success" />

</form>
<p></p>
<table class="table table-hover table-dark">
    <thead>
        <tr>
            <th scope="col">Drikkevarer nummer</th>
            <th scope="col">Navn</th>
            <th scope="col">Størrelse</th>
            <th scope="col">Pris</th>
            <th scope="col">Alkohol</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (Drikkevarer k in Model.Drikkevarer)
        {
            <tr>
                <td>@k.Nummer</td>

                <td>@k.Navn</td>

                <td>@k.Størrelse</td>

                <td>@k.Pris</td>

                <td>@k.Alkohol</td>

                <td><a asp-page="EditDrikkevarer" asp-route-nummer="@k.Nummer">Ændre</a></td>

            </tr>
        }

    </tbody>
    
</table>




 