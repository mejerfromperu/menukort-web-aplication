@page
@using menukort.model;
@model menukort.Pages.Burgere.IndexModel
@{
    ViewData["Title"] = "Burger";
}


<h1 class="jumbotron">Burger Menu</h1>
<form method="post">

    Vil du oprette en ny burger tryk på <input type="submit" value="Opret Burger" class="btn  btn-success" />

</form>
<p></p>
<table class="table table-hover table-dark">
    <thead>
        <tr>
            <th scope="col">Burger nummer</th>
            <th scope="col">Navn</th>
            <th scope="col">Beskrivelse</th>
            <th scope="col">Pris</th>
            <th scope="col">Vegan</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (Burger k in Model.Burger)
        {
            <tr>
                <td>@k.Nummer</td>

                <td>@k.Navn</td>

                <td>@k.Beskrivelse</td>

                <td>@k.Pris</td>

                <td>@k.Vegan</td>

                <td><a asp-page="EditBurger" asp-route-nummer="@k.Nummer">Ændre</a></td>

            </tr>
        }
    </tbody>
</table>


