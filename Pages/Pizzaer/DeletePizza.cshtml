        <br />

        <label>Vegan</label> : asp-for="@Model.Pizza.Vegan <br />
        <br />

        <label>DeepPan</label> : asp-for="@Model.Pizza.DeepPan <br />
        <br />

        <label>Familie</label> : asp-for="@Model.Pizza.FamilieSize <br />
        <br />

        <input type="submit" value="Opret ny Pizza" class="btn  btn-success" />
