}

<h1>Slet en Pizza</h1>

<form method="post">
    <div class="form-group">
        <label>Pizza nummer</label> : @Model.Pizza.Nummer <br />
        <br />

        <label>Pizza Navn</label> : @Model.Pizza.Navn <br />
        <br />

        <label>Pizza Beskrivelse</label> : @Model.Pizza.Beskrivelse <br />
        <br />

