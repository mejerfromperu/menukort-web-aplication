@page
@using menukort.model;
@model menukort.Pages.Pizzaer.IndexModel
@{
}

<h1 class="jumbotron">Vis Alle Kunder</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Pizza nummer</th>
            <th>Navn</th>
            <th>Beskrivelse</th>
            <th>Pris</th>
            <th>Vegan</th>
            <th>DeepPan</th>
            <th>Familysize</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Pizza k in Model.Pizza)
        {
            <tr>
                <td>@k.Nummer</td>

                <td>@k.Navn</td>

                <td>@k.Beskrivelse</td>

                <td>@k.Pris</td>

                <td>@k.Vegan</td>

                <td>@k.DeepPan</td>

                <td>@k.FamilieSize</td>

            </tr>
        }

    </tbody>
    <p>That was it</p>



</table>


